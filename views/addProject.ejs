<%- include('partials/header', { page }) %>

<div class="form-container">
  <h1 class="text-2xl font-bold mb-4">Add New Project</h1>
  <form method="POST" action="/solutions/addProject" class="space-y-4">

   

    <div>
      <label for="sector_id">Sector:</label>
      <select id="sector_id" name="sector_id" required class="w-full p-2 border rounded">
        <option value="">Select a sector</option>
        <% if (sectors && sectors.length > 0) { %>
          <% sectors.forEach(sector => { %>
            <option value="<%= sector.id %>"><%= sector.sector_name %></option>
          <% }); %>
        <% } else { %>
          <option disabled>No sectors available</option>
        <% } %>
      </select>
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
      Add Project
    </button>
  </form>
</div>

<%- include('partials/footer') %>
